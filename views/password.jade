extends layout-admin

block content
  .container(style="margin-top: 100px;")
    h1 Modifier le mot de passe
    form(role='form', action="/password",method="post")
      .row
        .col-xs-3.col-xs-offset-1
          input(type='hidden', name='username', value=accounts.username)
          .form-group
            input.form-control(type='password', name="pwd", placeholder='Nouveau mot de passe', style="margin: 20px 0;")
            input.form-control(type='password', name="pwd2", placeholder='Confirmer le nouveau mot de passe')
      .row
        .col-xs-2.col-xs-offset-1
          button.btn.btn-primary(type='submit') Envoyer
